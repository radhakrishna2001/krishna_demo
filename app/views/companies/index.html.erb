<h1> This is the company table </h1>
<table>
  <thead>
    <style>
table, th, td {
  border: 1px solid black;
}
</style>
  <tr>
  <th>Name</th>
  <th>Owner_name</th>
  <th>Address</th>
  <th colspan="3">Action</th>
    </tr>
    </thead>
    <tbody>
      <% @companys.each do |company| %>
         <tr>
          <td> <%= company.name %> </td>
          <td> <%= company.owner_name %> </td>
          <td> <%= company.address %> </td>
           <td> <%= link_to 'view', company_path(company) %></td>
            <td> <%= link_to "Delete", company, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?" } %> </td>

         </tr>
        <%end %>
    </tbody>
</table>
<%= link_to 'New company',new_company_path %>
<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>