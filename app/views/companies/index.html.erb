<div class="container">

<div class="text-center">
<h3> This is the company table </h3>
</div>

<style>
table, th, td {
  border: 1px solid black;
}
</style>

<table class="table table-hover table-sm">
  <thead>
  <tr>
  <th>Name </th>
  <th>Owner_name</th>
  <th>Address</th>
  <th colspan="3">Action</th>
    </tr>
    </thead>
    <tbody>
      <% @companys.each do |company| %>
         <tr>
          <td> <%= company.name %> </td>
          <td> <%= company.owner_name %> </td>
          <td> <%= company.address %> </td>
           <td> <%= link_to 'view', company_path(company) %></td>
            <td> <%= link_to "Delete", company, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?" } %> </td>

         </tr>
        <%end %>
    </tbody>
</table>

<div class = "mt-3">
<%= link_to 'New company',new_company_path,class:"btn btn-outline-primary"%>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
  <%= flash[:notice] %>
  </div>
<% end %>

</div>


