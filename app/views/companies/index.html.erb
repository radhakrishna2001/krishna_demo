  <div class="card">
  <div class="card-header">
    <h3 class="card-title mb-0">Companies</h3>
  </div>

  <style>
  </style>
  
  <div class="card-body p-0">
  <table class="table table-hover table-sm mb-0">
    <thead>
      <tr>
      <th>Name </th>
      <th>Owne_name</th>
      <th>Address</th>
      <th colspan="3">Action</th>
      </tr>
    </thead>
      <tbody>
        <% @companys.each do |company| %>
          <tr>
          <td> <%= link_to company.name, company_path(company)%> </td>
          <td> <%= company.owner_name %> </td>
          <td> <%= company.address %> </td>
          <td> <%= link_to "Edit",edit_company_path(company),class:" btn btn-outline-success px-2 py-0"%>
            <%= link_to "Delete", company, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"},class:"btn btn-outline-danger px-2 py-0"%>
          </td>
         </tr>
        <%end %>
      </tbody>
    </table>
  </div>
     
    <div class="card-footer p-0">
    <!-- <div>
      <%= link_to 'New company',new_company_path,class:"btn btn-outline-primary"%>
    </div> -->  
      <% if flash[:notice] %>
        <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
        </div>
      <% end %>
    </div>
    </div>


