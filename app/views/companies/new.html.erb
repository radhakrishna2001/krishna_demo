
<h1>Company Registraction</h1>

<%= form_with model: @company do  |form| %>

  <div class="from-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @company.errors.full_messages_for(:name).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :owner_name %><br>
    <%= form.text_field :owner_name %>
    <% @company.errors.full_messages_for(:owner_name).each do |message| %>
    <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
    <% @company.errors.full_messages_for(:address).each do |message| %>
    <div class="text-danger"><%= message %></div>
    <% end %>
  </div>
  
  <div class="mt-3">
   <%= form.submit "Create company",class:" btn btn-outline-primary"%>
  </div>
  <% end %>

