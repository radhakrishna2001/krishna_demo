<%= form_with model: [company, employee] do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @employee.errors.full_messages_for(:name).each do |message| %>
      <div class="text-danger"><%=message %></div>
    <%end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
    <% @employee.errors.full_messages_for(:email).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <%end %>
  </div>

  <div>
    <%= form.label :contact %><br>
    <%= form.telephone_field :contact %>
    <% @employee.errors.full_messages_for(:contact).each do |message| %>
      <div class="text-danger"><%=message %></div>
    <%end %>
  </div>

  <div class="mt-3"> 
    <%= form.submit "Update",class:"btn btn-outline-primary"%>
  </div>
<% end %>