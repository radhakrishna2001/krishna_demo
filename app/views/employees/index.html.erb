<h1> This is the Employee table </h1>
<table>
  <thead>
    <style>
      table, th, td {
      border: 1px solid black;
    }
  </style>
  <tr>
  <th>Name</th>
  <th>Email</th>
  <th>Contact</th>
  <th colspan="3">Action</th>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
         <tr>
          <td> <%= employee.name %> </td>
          <td> <%= employee.email%> </td>
          <td> <%= employee.contact %> </td>

          <th> <%= link_to 'View',company_employee_path(@company, employee.id)%></th>
          </tr>
        <%end %>  
    </tbody>
</table>
<%= link_to 'New Employee',new_company_employee_path(@company)%><br>
<%= link_to "Back Company",company_path(@company) %>
