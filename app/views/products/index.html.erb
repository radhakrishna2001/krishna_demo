<div class="card">
  <div class="card-header p-1">
    <h3 class="card-title mb-0">Product_table  </h3>
  </div>
  <style>
  </style>
  <div class="card-body p-0">
    <table class="table table-hover table-sm mb-0">
    <thead>
      <tr>
      <th>Product_name</th>
      <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
        <td> <%= link_to product.product_name,company_product_path(@company, product.id),class:"product" %></td>
        <td> <%= product.price%> </td>
        </tr>
        <%end %>  
    </tbody>
    </table>
  </div>


<div class="card-footer">
  <div>
    <%= link_to "NewProduct", new_company_product_path(@company),class:"btn btn-outline-success"%>
    <%= link_to "BackToCompany",company_path(@company),class:"btn btn-outline-primary" %>
  </div>
</div>

  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
    <% end %>
    </div>

<th> <%#= link_to 'View',company_product_path(@company, product.id)%></th> 
