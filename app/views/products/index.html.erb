<h1>Product table  </h1>
<table>
  <thead>
    <style>
      table, th, td {
      border: 1px solid black;
    }
  </style>
  <tr>
  <th>Product_name</th>
  <th>Price</th>
    </thead>
    <tbody>
      <% @products.each do |product| %>
         <tr>
          <td> <%= link_to product.product_name,company_product_path(@company, product.id),class:"product" %></td>
          <td> <%= product.price%> </td>
          </tr>
        <%end %>  
    </tbody>
</table>

<div class="mt-3">
<%= link_to "NewProduct", new_company_product_path(@company),class:"btn btn-outline-success"%>
<%= link_to "BackToCompany",company_path(@company),class:"btn btn-outline-primary" %>
</div>


<th> <%#= link_to 'View',company_product_path(@company, product.id)%></th> 
