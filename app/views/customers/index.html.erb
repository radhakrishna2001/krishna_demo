<div class="card">
  <div class="card-header p-1">
    <h3 class="card-title mb-0"> customer_table </h3>
  </div>

  <style>
  </style>

  <div class="card-body p-0">
    <table class="table table-hover table-sm mb-0">
      <thead>
        <tr>
        <th>Name</th>
        <th>Contact</th>
        <th colspan="3">Action</th> 
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
          <td><%=customer.name %></td>
          <td> <%=customer.contact %> </td> 
          </tr>
        <%end %>  
      </tbody>
    </table>
  </div>
<div class="card-footer p-0">
  <%= link_to "Create",new_customer_path,class:"btn btn-outline-primary"%>
</div>
</div>
